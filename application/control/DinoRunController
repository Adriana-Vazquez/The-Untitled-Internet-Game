package application.control;

public class DinoRunController
{
	private @FXML Label timer;
	private static final int START_TIME = 60;
	private IntegerProperty timeSeconds = new SimpleIntegerProperty(STARTTIME);
	private Timeline timeline;
	Player player;
	
	/**
	* Method for timer of sixty seconds
	*/
	public void timer()
	{
		timerLabel.textProperty().bind(timeSeconds.asString());
		if (timeline != null) 
		{
            		timeline.stop();
        	}
        	timeSeconds.set(STARTTIME);
        	timeline = new Timeline();
        	timeline.getKeyFrames().add(
                	new KeyFrame(Duration.seconds(STARTTIME+1),
                	new KeyValue(timeSeconds, 0)));
		
	)
	
	
	/**
	* Method for game over and send to the next scene
	*/
	public void gameOver()
	{
		if(timesecond == 0 || player.die)
		{
			ClassRoomController classControl = new ClassRoomController(getScore(), this.primaryStage);
			classControl = setClassScene();
		}
	}
	
	
	/**
	* Set the scene
	*/
	public void loadGame() 
	{
    		try 
		{
			String selectionView = "/fxmlFiles/DinoRun.fxml";
			FXMLLoader loader = new FXMLLoader(getClass().getResource(selectionView));
			loader.setController(this);
			Parent root = loader.load();
			Scene scene = new Scene(root,800,800);
			this.primaryStage.setScene(scene);
		}catch(IOException e) 
		{
			e.printStackTrace();
		}
    	}
	
	/**
	* Method when up arrow and down arrow are pressed
	*/
}
